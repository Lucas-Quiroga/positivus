---
import { Image } from "astro:assets";
import Profile1 from "../assets/images/Profile1.png";
import Profile2 from "../assets/images/Profile2.png";
import Profile3 from "../assets/images/Profile3.png";
import Profile4 from "../assets/images/Profile4.png";
import Profile5 from "../assets/images/Profile5.png";
import Profile6 from "../assets/images/Profile6.png";
import LinkedinIcon from "../assets/images/LinkedinIcon.png";

interface TeamProps {
  name: string;
  work: string;
  image: ImageMetadata;
  description: string;
}

const data: TeamProps[] = [
  {
    name: "John Doe",
    work: "CEO and Founder",
    image: Profile1,
    description:
      "10+ years of experience in digital marketing. Expertise in SEO, PPC, and content strategy",
  },
  {
    name: "Jane Doe",
    work: "Director of Operations",
    image: Profile2,
    description:
      "7+ years of experience in project management and team leadership. Strong organizational and communication skills",
  },
  {
    name: "Michael Brown",
    work: "Senior SEO Specialist",
    image: Profile3,
    description:
      "5+ years of experience in SEO and content creation. Proficient in keyword research and on-page optimization",
  },
  {
    name: "Emily Johnson",
    work: "PPC Manager",
    image: Profile4,
    description:
      "3+ years of experience in paid search advertising. Skilled in campaign management and performance analysis",
  },
  {
    name: "Brian Williams",
    work: "Social Media Specialist",
    image: Profile5,
    description:
      "4+ years of experience in social media marketing. Proficient in creating and scheduling content, analyzing metrics, and building engagement",
  },
  {
    name: "Sarah Kim",
    work: "Content Creator",

    image: Profile6,
    description:
      "2+ years of experience in writing and editing Skilled in creating compelling, SEO-optimized content for various industries",
  },
];
---

<section class="team__container">
  <header class="team__header">
    <h2 class="team__header-title">Team</h2>
    <p class="team__header-description">
      Meet the skilled and experienced team behind our <br /> successful digital
      marketing strategies
    </p>
  </header>
  <div class="section__cards">
    {
      data.map((item) => (
        <article class="card">
          <div class="card__container">
            <div class="card__header">
              <img class="card__image" src={item.image.src} alt={item.name} />
              <div class="card__content">
                <h4 class="card__title">{item.name}</h4>
                <p class="card__subtitle">{item.work}</p>
              </div>
              <Image
                src={LinkedinIcon}
                alt="LinkedinIcon"
                width={34}
                height={34}
                class="card__img-icon"
              />
            </div>
            <div class="card__divider" />
            <p class="card__description">{item.description}</p>
          </div>
        </article>
      ))
    }
  </div>
  <div class="team__button-container">
    <div class="team__button">See all team</div>
  </div>
</section>

<style>
  .team__header {
    display: flex;
    align-items: center;
    justify-content: start;
    margin: auto;
    gap: 40px;
  }

  .team__header-title {
    width: 101px;
    height: 51px;
    border-radius: 7px;
    background-color: #b9ff66;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40px;
  }

  .team__header-description {
    font-size: 18px;
  }

  .section__cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 8px;
  }

  .card {
    border-radius: 45px;
    border: 1px solid black;
    width: 387px;
    height: 331px;
    margin: auto;
    display: flex;
  }

  .card__container {
    width: 317px;
    height: 228px;
    display: flex;
    margin: auto;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .card__header {
    display: flex;
    width: 100%;
    height: 102px;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    justify-content: end;
    margin-left: 20px;
  }

  .card__title {
    font-size: 20px;
    margin: 0;
    padding: 0;
  }

  .card__subtitle {
    font-size: 18px;
    margin: 0;
    padding: 0;
  }

  .card__img-icon {
    position: relative;
  }

  .card__divider {
    width: 100%;
    height: 1px;
    background-color: #000000;
    margin: 1px 0;
  }

  .card__description {
    font-size: 18px;
    margin: 0;
  }

  .team__button-container {
    width: 100%;
    padding: 25px 0;
  }

  .team__button {
    background-color: black;
    width: 269px;
    height: 68px;
    border-radius: 14px;
    border: 1px solid black;
    display: flex;
    color: white;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-left: auto;
    margin-right: 3rem;
  }
</style>
